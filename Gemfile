# Gemfile
source 'https://rubygems.org'

gem 'sinatra'
gem 'sinatra-contrib' # Provides helpers like halt
gem 'sequel' # Load Sequel tasks for Rake
gem 'pg' # PostgreSQL adapter for Sequel
gem 'puma', '~> 6.0' # Web server
gem 'rake', '~> 13.0' # For migrations and tasks
gem 'faker' # For generating seed data
gem 'bcrypt' # Keep this for potential future local auth
gem 'omniauth' # Authentication
gem 'omniauth-google-oauth2' # Authentication
gem 'dotenv' # Environment variables
gem 'sinatra-flash', '~> 0.3.0' # Add flash messages to your Sinatra app
gem 'rackup' # Dependency for running Sinatra apps

group :development, :test do
  # Add other development/test gems here
end
